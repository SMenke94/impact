<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-xs-12 col-md-11">
      <h2>You're going to <%= @booking.project.location %>!</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>

    <!-- Left side of booking show page -->
    <div class="col-md-5">
      <div class="card-booking">
        <div class="card-bottom-border card-project-dates">
          <p><%= @booking.start_date.strftime("%b %d, %Y") %> - <%= @booking.end_date.strftime("%b %d, %Y") %></p>
        </div>
        <div class="card-bottom-border card-project-participants">
          <p>Your fellow volunteers</p>
          <% @booking.all_volunteers.each do |volunteer| %>
          <div class="volunteer-info">
            <%= link_to profile_path(volunteer) do %>
              <%= cl_image_tag volunteer.profile_picture.url(:avatar),
              class: "card-project-avatar card-project-participant" %>
            <% end %>
            <span><%= volunteer.first_name %> <%= volunteer.last_name %></span>
            <!-- include start_date end_date of fellow volunteers-->
          </div>
          <% end %>
        </div>
        <div class="card-bottom-border card-project-det">
          <%= link_to "View project", project_path(@booking.project) %>
        </div>

      </div>

    </div>

    <div class="col-md-1"></div>

    <!-- Right side of booking show page -->
    <div class="col-md-4">
      <div class="card-booking project-host">
        <%= link_to profile_path(@booking.project.user) do %>
          <%= cl_image_tag @booking.project.user.profile_picture.url(:avatar),
          class: "card-project-avatar card-project-participant" %>
        <% end %>
        <p><%= @booking.project.user.first_name %> <%= @booking.project.user.last_name %></p>
        <p>Email</p>
        <p>Name</p>
        <p>Address</p>
      </div>
    </div>

    <div class="col-md-1"></div>
  </div>
</div>
