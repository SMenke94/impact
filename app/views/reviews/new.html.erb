<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <h2>Write a review for <%= @user.first_name %> <%= @user.last_name %></h2>

      <%= simple_form_for([ @user, @review ]) do |form| %>
        <%= form.input :content, as: :text %>
        <%= form.button :submit, class: "btn-book" %>
      <% end %>

    </div>
  </div>
</div>
